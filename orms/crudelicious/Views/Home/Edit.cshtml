@model Dish

@{
    ViewData["Title"] = "CRUDElicious | New";
}

<div>
    <h1 class="mt-5 mb-5 text-center">Edit @Model.Name</h1>
    <a href="/">Home</a>
    <form action="@Model.DishId" class="mt-3" method="post">
        <div class="row justify-content-between">
            <div class="col-3">
                <div class="row">
                    <label asp-for="Chef">Chef's Name:</label>
                    <input asp-for="Chef">
                    <small><span class="text-danger" asp-validation-for="Chef"></span></small>
                </div>
                <div class="row">
                    <label asp-for="Name">Name of Dish:</label>
                    <input asp-for="Name">
                    <small><span class="text-danger" asp-validation-for="Name"></span></small>
                </div>
                <div class="row">
                    <label asp-for="Calories"># of Calories:</label>
                    <input asp-for="Calories">
                    <small><span class="text-danger" asp-validation-for="Calories"></span></small>
                </div>
            </div>
            <div class="col-2">
                <label asp-for="Tastiness" class="form-label">Tastiness</label>
                <select asp-for="Tastiness" class="form-select">
                    <option selected>Choose...</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <small><span class="text-danger" asp-validation-for="Tastiness"></span></small>
            </div>
            <div class="col-5 d-flex flex-column">
                <div class="row mb-3">
                    <label asp-for="Description" class="form-label">Description:</label>
                    <textarea asp-for="Description" rows="5" style="resize: none;"></textarea>
                    <small><span class="text-danger" asp-validation-for="Description"></span></small>
                </div>
                <div class="row">
                    <div class="col">
                        <input class="btn btn-primary" value="Edit Dish" type="submit">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>