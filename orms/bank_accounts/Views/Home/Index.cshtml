@{
    ViewData["Title"] = "Bank | Register";
}

@model User;

<div>
    <div class="text-center">
        <h1 class="display-4 mb-5">Register</h1>
    </div>
    <form asp-action="Register" asp-controller="Home" method="post">
        <div class="row mb-3">
            <div class="col-3">
                <label class="col-form-label" asp-for="FirstName">First Name:</label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="FirstName">
                <small><span class="text-danger" asp-validation-for="FirstName"></span></small>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-3">
                <label class="col-form-label" asp-for="LastName">Last Name:</label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="LastName">
                <small><span class="text-danger" asp-validation-for="LastName"></span></small>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-3">
                <label class="col-form-label" asp-for="Email">Email:</label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="Email">
                <small><span class="text-danger" asp-validation-for="Email"></span></small>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-3">
                <label class="col-form-label" asp-for="Password">Password:</label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="Password">
                <small><span class="text-danger" asp-validation-for="Password"></span></small>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-3">
                <label class="col-form-label" asp-for="ConfirmPassword">Confirm Password:</label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="ConfirmPassword">
                <small><span class="text-danger" asp-validation-for="ConfirmPassword"></span></small>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-3 d-flex justify-content-end">
                <input class="btn btn-primary mb-3" type="submit" value="Register">
            </div>
        </div>
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-3 d-flex justify-content-end">
                <a href="/login">Already Registered? Login here.</a>
            </div>
        </div>
    </form>
</div>
