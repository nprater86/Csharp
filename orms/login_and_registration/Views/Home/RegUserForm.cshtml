@model User

<form class="form-width" asp-controller="Home" asp-action="Register" method="post">
    <div class="form-group">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="ConfirmNewPassword"></label>
        <input class="form-control" asp-for="ConfirmNewPassword">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="ConfirmNewPassword"></span>
    </div>
    <input class="btn btn-primary" value="Sign Up Now" type="submit">
</form>