@model LoginUser;

<form class="form-width" asp-controller="Home" asp-action="SubmitLogin" method="post">
    <div class="form-group">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="mb-3">
        <span class="error-message" asp-validation-for="Password"></span>
    </div>
    <input class="btn btn-primary" value="Login" type="submit">
</form>