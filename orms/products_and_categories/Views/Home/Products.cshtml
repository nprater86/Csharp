@{
    ViewData["Title"] = "Products";
}

@model Product;

<div class="d-flex justify-content-center">
    <h1 class="display-4 mt-5 mb-5">Products | <a href="/categories">Categories</a></h1>
</div>
<div class="row w-100 justify-content-center">
    <div class="col-6">
        <h1 class="display-6 text-center mb-5">New Product</h1>
        <form asp-action="CreateProduct" asp-controller="Home" method="post">
            <div class="row mb-3">
                <div class="col-2">
                    <label class="col-form-label" asp-for="Name">Name:</label>
                </div>
                <div class="col-6">
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label class="col-form-label" asp-for="Description">Description:</label>
                </div>
                <div class="col-6">
                    <textarea class="form-control" rows=5 asp-for="Description" style="resize: none;"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label class="col-form-label" asp-for="Price">Price:</label>
                </div>
                <div class="col-6">
                    <div class="input-group">
                        <div class="input-group-text">$</div>
                        <input type="number" step="0.01" class="form-control" asp-for="Price">
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                </div>
                <div class="col-2">
                    <input type="submit" class="btn btn-primary" value="Create">
                </div>
            </div>
        </form>
    </div>
    <div class="col-6 d-flex flex-column">
        <h1 class="display-6 text-center mb-5">Existing Products</h1>
        <ul>
        @{
            foreach(var p in ViewBag.Products)
            {
                <li><a href="/products/@p.ProductId">@p.Name</a></li>
            }
        }
        </ul>
    </div>
</div>